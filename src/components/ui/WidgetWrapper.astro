---
import type { HTMLTag } from 'astro/types';
import type { Widget } from '~/types';
import { twMerge } from 'tailwind-merge';
import WrapperContent from './WrapperContent.astro';

export interface Props extends Widget {
  containerClass?: string;
  wrapperClass?: string;
  roundTopClass?: string;
  roundBottomClass?: string;
  ['as']?: HTMLTag;
}

const {
  id,
  isDark = false,
  containerClass = '',
  wrapperClass = '',
  roundTopClass = '',
  roundBottomClass = '',
  bg,
  as = 'section',
} = Astro.props;

const WrapperTag = as;
---

<>
  <WrapperTag class={twMerge('relative not-prose scroll-mt-[72px]', wrapperClass)} {...id ? { id } : {}}>
    {
      roundTopClass && (
        <div>
          <div class={twMerge('relative w-full h-full', wrapperClass)}>
            <div class={twMerge('absolute top-0 w-full h-[100vh] ', roundTopClass)} />
            <div
              class={twMerge(
                'absolute top-[40px] left-[-40px] w-[calc(100%+80px)] h-[100vh] blur-lg rounded-t-full',
                wrapperClass
              )}
            />
            <WrapperContent bg={bg} containerClass={containerClass} isDark={isDark}>
              <slot />
            </WrapperContent>
          </div>
        </div>
      )
    }
    {
      !roundTopClass && !roundBottomClass && (
        <WrapperContent bg={bg} containerClass={containerClass} isDark={isDark}>
          <slot />
        </WrapperContent>
      )
    }
    {
      roundBottomClass && (
        <div>
          <div class={twMerge('relative w-full h-full', wrapperClass)}>
            <div class={twMerge('absolute bottom-0 w-full h-[100vh]', roundBottomClass)} />
            <div
              class={twMerge(
                'absolute bottom-[40px] left-[-40px] w-[calc(100%+80px)] h-[100vh] blur-lg rounded-b-full',
                wrapperClass
              )}
            />
            <WrapperContent bg={bg} containerClass={containerClass} isDark={isDark}>
              <slot />
            </WrapperContent>
          </div>
        </div>
      )
    }
  </WrapperTag>
</>

---
import type { HTMLTag } from 'astro/types';
import type { Widget } from '~/types';
import { twMerge } from 'tailwind-merge';
import Background from './Background.astro';

export interface Props extends Widget {
  containerClass?: string;
  ['as']?: HTMLTag;
}

const { isDark = false, containerClass = '', bg } = Astro.props;
---

<div class="absolute inset-0 pointer-events-none -z-[1]" aria-hidden="true">
  <slot name="bg">
    {bg ? <Fragment set:html={bg} /> : <Background isDark={isDark} />}
  </slot>
</div>
<div
  class:list={[
    twMerge(
      'relative mx-auto max-w-7xl px-4 md:px-6 py-2 md:py-4 lg:py-6 text-default intersect-once intersect-quarter intercept-no-queue motion-safe:md:opacity-0 motion-safe:md:intersect:animate-fade',
      containerClass
    ),
    { dark: isDark },
  ]}
>
  <slot />
</div>
